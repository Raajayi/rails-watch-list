<div class="container">
  <h1><%= @list.name %></h1>
  <div>
    <p>
      <%= link_to "Add a Bookmark", new_list_bookmark_path(@list), class: "btn btn-secondary" %>
    </p>
  </div>
  <% @bookmarks.each do |bookmark| %>
    <div>
    </div>
    <div class="card" style="width: 18rem;">
      <!-- <img class="card-img-top" src=<%#= bookmark.movie.poster_url %> alt="Card image cap"> -->
      <%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
      <div class="card-body">
        <h5 class="card-title"><%= bookmark.movie.title %></h5>
        <p class="card-text"><%= bookmark.comment %></p>
        <p class="card-text"><%= bookmark.priority %></p>
        <p class="card-text"><%= bookmark.movie.overview %></p>
        <%= link_to "Delete Bookmark", bookmark_path(bookmark), data: {turbo_method: :delete, turbo_confirm: "Are you certain?"}, class: "btn btn-primary"%>
        <%= link_to "Edit Bookmark", edit_bookmark_path(bookmark), class: "btn btn-primary"%>
      </div>
    </div>
    <% bookmark.movie.poster_url %>
  <% end %>
</div>

<%= cl_image_tag @list.photo.key, width: 400, height: 300, crop: :fill %>
